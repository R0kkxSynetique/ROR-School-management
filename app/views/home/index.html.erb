<div class="flex flex-col items-center justify-center space-y-6">
  <h1 class="text-4xl font-bold text-gray-100 sm:text-5xl">Welcome to School Management</h1>

  <div class="w-full max-w-md p-6 bg-gray-800 rounded-lg shadow-xl">
    <% if user_signed_in? %>
      <div class="space-y-4">
        <p class="text-lg text-center text-gray-300">Welcome back! You are signed in as <span class="font-semibold text-blue-400"><%= current_user.email %></span></p>
      </div>
    <% else %>
      <div class="space-y-4">
        <p class="text-lg text-center text-gray-300">Please sign in to get started.</p>
      </div>
    <% end %>
  </div>
</div>