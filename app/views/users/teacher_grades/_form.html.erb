<%= form_with(model: [:users, @examination, @grade], class: "space-y-6") do |f| %>
  <% if @grade.errors.any? %>
    <div class="p-4 mb-6 rounded bg-red-50">
      <h2 class="text-sm font-medium text-red-700"><%= pluralize(@grade.errors.count, "error") %> prohibited this grade from being saved:</h2>
      <ul class="mt-3 text-sm text-red-600 list-disc list-inside">
        <% @grade.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6">
    <div>
      <%= f.label :student_id, "Student", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.collection_select :student_id, 
          @available_students, :id, 
          ->(s) { "#{s.firstname} #{s.lastname}" }, 
          { prompt: "Select a student" }, 
          class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
    </div>

    <div>
      <%= f.label :value, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="relative rounded-md shadow-sm">
        <%= f.number_field :value, 
            min: 0, 
            max: 100, 
            placeholder: "Enter grade (0-100)",
            class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm pr-12 placeholder-gray-400" %>
        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
          <span class="text-gray-500 sm:text-sm">/100</span>
        </div>
      </div>
    </div>

    <div>
      <%= f.label :effective_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :effective_date, 
          class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end space-x-3">
      <%= link_to 'Cancel', users_examination_path(@examination), class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= f.submit class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>