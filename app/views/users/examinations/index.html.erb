<% content_for :title, "Examinations" %>

<div class="container px-4 py-8 mx-auto">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-400 to-purple-400">Examinations</h1>
      <p class="mt-2 text-sm text-gray-400">View and manage all examination records.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to new_users_examination_path, class: "inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-indigo-500 transition duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        New Examination
      <% end %>
    </div>
  </div>

  <div class="mt-8">
    <div class="bg-gray-900 shadow-xl rounded-lg border border-gray-700">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-700">
          <thead>
            <tr>
              <th class="px-6 py-3.5 text-left text-sm font-medium text-gray-200">Course</th>
              <th class="px-6 py-3.5 text-left text-sm font-medium text-gray-200">Title</th>
              <th class="px-6 py-3.5 text-left text-sm font-medium text-gray-200">Expected Date</th>
              <th class="relative px-6 py-3.5">
                <span class="sr-only">Actions</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-700">
            <% @examinations.each do |examination| %>
              <tr class="hover:bg-gray-800/50">
                <td class="px-6 py-4 text-sm text-gray-200"><%= examination.course.name %></td>
                <td class="px-6 py-4 text-sm text-gray-200"><%= examination.title %></td>
                <td class="px-6 py-4 text-sm text-gray-200">
                  <% days_until = (examination.expected_date.to_date - Date.today).to_i %>
                  <% status_class = case
                    when days_until < 0 then "bg-red-900 text-red-200"
                    when days_until <= 7 then "bg-yellow-900 text-yellow-200"
                    else "bg-green-900 text-green-200"
                    end %>
                  <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_class %>">
                    <%= examination.expected_date.strftime("%d.%m.%Y") %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end space-x-3">
                    <%= link_to users_examination_path(examination), class: "text-blue-400 hover:text-blue-300 inline-flex items-center" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                    <% end %>
                    <%= link_to edit_users_examination_path(examination), class: "text-indigo-400 hover:text-indigo-300 inline-flex items-center" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                    <% end %>
                    <%= button_to users_examination_path(examination), method: :delete, class: "text-red-400 hover:text-red-300 inline-flex items-center" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
