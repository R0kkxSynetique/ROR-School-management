<div class="container px-4 py-8 mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold">My Examinations</h1>
    <%= link_to 'New Examination', new_users_examination_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>

  <div class="overflow-hidden bg-white shadow sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Course</th>
          <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Title</th>
          <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Expected Date</th>
          <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @examinations.each do |examination| %>
          <tr>
            <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">
              <%= examination.course.name %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">
              <%= examination.title %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">
              <%= examination.expected_date.strftime("%B %d, %Y") %>
            </td>
            <td class="px-6 py-4 text-sm font-medium whitespace-nowrap">
              <%= link_to 'View', users_examination_path(examination), class: "text-indigo-600 hover:text-indigo-900" %>
              <%= link_to 'Edit', edit_users_examination_path(examination), class: "ml-3 text-indigo-600 hover:text-indigo-900" %>
              <%= button_to users_examination_path(examination),
                  method: :delete,
                  class: "ml-3 text-red-600 hover:text-red-900",
                  form_class: "inline-block",
                  data: { turbo_confirm: 'Are you sure?' } do %>
                Delete
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>