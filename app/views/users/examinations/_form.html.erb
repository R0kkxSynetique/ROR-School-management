<%= form_with(model: [:users, @examination], class: "space-y-6") do |f| %>
  <% if @examination.errors.any? %>
    <div class="bg-red-50 p-4 rounded">
      <h2 class="text-red-700 text-sm font-medium"><%= pluralize(@examination.errors.count, "error") %> prohibited this examination from being saved:</h2>
      <ul class="mt-3 list-disc list-inside text-red-600 text-sm">
        <% @examination.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :expected_date, class: "block text-sm font-medium text-gray-700" %>
    <%= f.date_field :expected_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :course_id, "Course", class: "block text-sm font-medium text-gray-700" %>
    <%= f.collection_select :course_id, current_user.person.courses, :id, :name, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="flex justify-end">
    <%= f.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>