<% content_for :title, "Manage Students" %>

<div class="container px-4 py-8 mx-auto">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-400 to-purple-400">Students</h1>
      <p class="mt-2 text-sm text-gray-400">Manage and track all student records in the system.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to new_users_dean_student_path, class: "inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-indigo-500 transition duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Add Student
      <% end %>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-xl font-semibold text-gray-200 mb-4">Active Students</h2>
    <div class="bg-gray-900 shadow-xl rounded-lg border border-gray-700">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-700">
          <thead>
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-medium text-gray-200 sm:pl-6">Name</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-200">Username</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-200">Phone Number</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                <span class="sr-only">Actions</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-700">
            <% @active_students.each do |student| %>
              <tr class="hover:bg-gray-800/50">
                <td class="px-6 py-4 text-sm text-gray-200">
                  <%= "#{student.firstname} #{student.lastname}" %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-200"><%= student.username %></td>
                <td class="px-6 py-4 text-sm text-gray-200"><%= student.phone_number %></td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end space-x-3">
                    <%= link_to edit_users_dean_student_path(student), class: "text-indigo-400 hover:text-indigo-300 inline-flex items-center" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                    <% end %>
                    <%= button_to archive_users_dean_student_path(student), method: :patch, class: "text-red-400 hover:text-red-300 inline-flex items-center" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <% if @archived_students.any? %>
    <div class="mt-8">
      <h2 class="text-xl font-semibold text-gray-200 mb-4">Archived Students</h2>
      <div class="bg-gray-900 shadow-xl rounded-lg border border-gray-700">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-700">
            <thead>
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-medium text-gray-200 sm:pl-6">Name</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-200">Username</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-200">Phone Number</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">Status</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
              <% @archived_students.each do |student| %>
                <tr class="hover:bg-gray-800/50">
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-300 sm:pl-6">
                    <%= "#{student.firstname} #{student.lastname}" %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-300"><%= student.username %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-300"><%= student.phone_number %></td>
                  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                    <span class="px-2 py-1 text-xs font-medium rounded-md bg-gray-800 text-gray-300">
                      Archived
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
