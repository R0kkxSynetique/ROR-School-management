<div class="bg-gray-900 bg-opacity-50 shadow-xl backdrop-blur-sm border border-gray-800 rounded-xl p-6">
  <div class="space-y-6">
    <% if @student.errors.any? %>
      <div class="bg-red-900 bg-opacity-50 border border-red-700 rounded-lg p-4 mb-6">
        <h2 class="text-red-300 text-lg font-medium mb-2">
          <%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:
        </h2>
        <ul class="list-disc list-inside text-red-200">
          <% @student.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :username, class: "block text-sm font-medium text-gray-300 mb-1" %>
      <%= f.text_field :username, class: "bg-gray-800 text-gray-200 p-2 block w-full rounded-lg border border-gray-700 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :firstname, "First Name", class: "block text-sm font-medium text-gray-300 mb-1" %>
      <%= f.text_field :firstname, class: "bg-gray-800 text-gray-200 p-2 block w-full rounded-lg border border-gray-700 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :lastname, "Last Name", class: "block text-sm font-medium text-gray-300 mb-1" %>
      <%= f.text_field :lastname, class: "bg-gray-800 text-gray-200 p-2 block w-full rounded-lg border border-gray-700 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :phone_number, "Phone Number", class: "block text-sm font-medium text-gray-300 mb-1" %>
      <%= f.text_field :phone_number, class: "bg-gray-800 text-gray-200 p-2 block w-full rounded-lg border border-gray-700 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <%= f.fields_for :address do |af| %>
      <div class="pt-6 border-t border-gray-700">
        <h3 class="mb-4 text-lg font-medium text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-purple-400">Address Information</h3>

        <div class="space-y-6">
          <div>
            <%= af.label :street, class: "block text-sm font-medium text-gray-300 mb-1" %>
            <%= af.text_field :street, class: "bg-gray-800 text-gray-200 p-2 block w-full rounded-lg border border-gray-700 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= af.label :locality, "City", class: "block text-sm font-medium text-gray-300 mb-1" %>
            <%= af.text_field :locality, class: "bg-gray-800 text-gray-200 p-2 block w-full rounded-lg border border-gray-700 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= af.label :postal_code, "Postal Code", class: "block text-sm font-medium text-gray-300 mb-1" %>
            <%= af.text_field :postal_code, class: "bg-gray-800 text-gray-200 p-2 block w-full rounded-lg border border-gray-700 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= af.label :administrative_area, "State/Province", class: "block text-sm font-medium text-gray-300 mb-1" %>
            <%= af.text_field :administrative_area, class: "bg-gray-800 text-gray-200 p-2 block w-full rounded-lg border border-gray-700 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= af.label :country, class: "block text-sm font-medium text-gray-300 mb-1" %>
            <%= af.text_field :country, class: "bg-gray-800 text-gray-200 p-2 block w-full rounded-lg border border-gray-700 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="pt-6 flex justify-end space-x-3">
      <%= link_to "Cancel", users_dean_students_path, class: "inline-flex items-center px-4 py-2 border border-gray-700 rounded-lg shadow-sm text-sm font-medium text-gray-300 bg-gray-800 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-indigo-500 transition duration-200" %>
      <%= f.submit class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-indigo-500 transition duration-200" %>
    </div>
  </div>
</div>
