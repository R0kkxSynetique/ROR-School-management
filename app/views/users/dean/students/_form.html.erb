<div class="grid grid-cols-1 gap-6">
  <% if @student.errors.any? %>
    <div class="p-4 mb-6 rounded bg-red-50">
      <h2 class="text-sm font-medium text-red-700"><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>
      <ul class="mt-3 text-sm text-red-600 list-disc list-inside">
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :username, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
  </div>

  <div>
    <%= f.label :firstname, "First Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :firstname, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
  </div>

  <div>
    <%= f.label :lastname, "Last Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :lastname, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
  </div>

  <div>
    <%= f.label :phone_number, "Phone Number", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :phone_number, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
  </div>

  <%= f.fields_for :address do |af| %>
    <div class="pt-6 border-t border-gray-200">
      <h3 class="mb-4 text-lg font-medium text-gray-900">Address Information</h3>
      
      <div class="grid grid-cols-1 gap-6">
        <div>
          <%= af.label :street, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= af.text_field :street, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
        </div>

        <div>
          <%= af.label :locality, "City", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= af.text_field :locality, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
        </div>

        <div>
          <%= af.label :postal_code, "Postal Code", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= af.text_field :postal_code, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
        </div>

        <div>
          <%= af.label :administrative_area, "State/Province", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= af.text_field :administrative_area, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
        </div>

        <div>
          <%= af.label :country, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= af.text_field :country, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="pt-5">
  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", users_dean_students_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= f.submit class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
</div>