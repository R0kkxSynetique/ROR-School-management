<% content_for :title, "Assign Specialization to Professor" %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold mb-6">Assign Specialization to Professor</h1>

    <%= form_with(url: users_dean_assign_specialization_path, method: :post, class: "space-y-6") do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :professor_id, "Professor", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :professor_id, 
              Employee.where.not(type: 'Dean'), :id, 
              ->(p) { "#{p.firstname} #{p.lastname} (#{p.username})" }, 
              { prompt: "Select a professor" }, 
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :specialization_id, "Specialization", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :specialization_id, 
              Specialization.all, :id, :name, 
              { prompt: "Select a specialization" }, 
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div class="pt-5">
        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", :back, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= f.submit "Assign Specialization", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>