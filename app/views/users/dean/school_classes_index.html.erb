<% content_for :title, "Manage School Classes" %>

<div class="container px-4 py-8 mx-auto">
  <div class="sm:flex sm:items-center sm:justify-between">
    <h1 class="text-2xl font-bold">School Classes</h1>
    <div class="mt-4 sm:mt-0">
      <%= link_to "Create New Class", users_dean_new_class_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>

  <div class="mt-8 overflow-hidden bg-white shadow sm:rounded-lg">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">UID</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Name</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Section</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Students</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @school_classes.each do |school_class| %>
            <tr>
              <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap"><%= school_class.uid %></td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= school_class.name %></td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= school_class.section.name %></td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= school_class.students.count %></td>
              <td class="flex px-6 py-4 space-x-2 text-sm font-medium whitespace-nowrap">
                <%= link_to "View", school_class_path(school_class), class: "text-indigo-600 hover:text-indigo-900" %> · 
                <%= link_to "Edit", users_dean_edit_class_path(school_class), class: "text-indigo-600 hover:text-indigo-900" %> · 
                <%= button_to "Delete", users_dean_delete_class_path(school_class), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 inline", data: { confirm: "Are you sure you want to delete this class? This action cannot be undone." } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>