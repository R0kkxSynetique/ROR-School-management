<%= form_with(model: [:users, :dean, promotion_asserment], class: "space-y-6") do |f| %>
  <% if promotion_asserment.errors.any? %>
    <div class="p-4 rounded-md bg-red-50">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="w-5 h-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 101.414 1.414L10 11.414l1.293 1.293a1 1 001.414-1.414L11.414 10l1.293-1.293a1 1 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There was a problem with your submission</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="pl-5 space-y-1 list-disc">
              <% promotion_asserment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="px-4 py-5 bg-white shadow sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Promotion Requirement Details</h3>
        <p class="mt-1 text-sm text-gray-500">Define the conditions for student promotion.</p>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-6">
            <%= f.label :effective_date, class: "block text-sm font-medium text-gray-700" %>
            <%= f.date_field :effective_date, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div class="col-span-6">
            <%= f.label :section_ids, 'Sections', class: "block text-sm font-medium text-gray-700" %>
            <%= f.collection_select :section_ids, @sections, :id, :name, 
                { prompt: 'Select sections' }, 
                { multiple: true, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
          </div>

          <div class="col-span-6">
            <%= f.label :condition_variable, 'Variable to Evaluate', class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :condition_variable, 
                @variables.map { |key, label| [label, key] },
                { prompt: 'Select variable' },
                { class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                  data: { action: "change->promotion-asserment#toggleCourseSelect" } } %>
          </div>

          <div id="course_selection" class="col-span-6 <%= 'hidden' if promotion_asserment.condition_variable == 'overall_average' %>">
            <%= f.label :course_ids, 'Courses', class: "block text-sm font-medium text-gray-700" %>
            <%= f.collection_select :course_ids, @courses, :id, :name,
                { prompt: 'Select courses' },
                { multiple: promotion_asserment.condition_variable == 'courses_average',
                  class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= f.label :condition_operator, 'Operator', class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :condition_operator, @operators,
                { prompt: 'Select operator' },
                { class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= f.label :condition_value, 'Value', class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :condition_value,
                step: "0.01",
                class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to 'Cancel', users_dean_promotion_asserments_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= f.submit class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>

<%= javascript_tag do %>
  document.addEventListener("turbo:load", function() {
    const form = document.querySelector('form');
    if (!form) return;

    const variableSelect = form.querySelector('#promotion_asserment_condition_variable');
    const courseSelection = document.querySelector('#course_selection');
    const courseSelect = form.querySelector('#promotion_asserment_course_ids');

    variableSelect.addEventListener('change', function(e) {
      if (e.target.value === 'overall_average') {
        courseSelection.classList.add('hidden');
        courseSelect.multiple = false;
        courseSelect.selectedIndex = -1;
      } else {
        courseSelection.classList.remove('hidden');
        courseSelect.multiple = (e.target.value === 'courses_average');
        if (e.target.value === 'course') {
          courseSelect.multiple = false;
        }
      }
    });
  });
<% end %>