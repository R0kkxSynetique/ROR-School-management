<% content_for :title, "Edit Teacher" %>

<div class="container px-4 py-8 mx-auto">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-400 to-purple-400">Edit Teacher</h1>
      <p class="mt-2 text-sm text-gray-400">Update teacher information and contact details.</p>
    </div>

    <%= form_with(model: @teacher, url: users_dean_update_teacher_path(@teacher), method: :patch, class: "space-y-6") do |f| %>
      <%= render partial: "teacher_form", locals: { f: f } %>
    <% end %>
  </div>
</div>
