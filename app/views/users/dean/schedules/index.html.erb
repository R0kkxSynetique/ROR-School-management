<% content_for :title, "Manage Schedules" %>

<div class="container px-4 py-8 mx-auto">
  <div class="sm:flex sm:items-center sm:justify-between">
    <h1 class="text-2xl font-bold">Schedules</h1>
    <div class="mt-4 sm:mt-0">
      <%= link_to "Add New Schedule", new_users_dean_schedule_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>

  <div class="mt-8 overflow-hidden bg-white shadow sm:rounded-lg">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Course</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Day</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Time</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Classes</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Room</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% @schedules.each do |schedule| %>
            <tr>
              <td class="px-6 py-4 text-sm text-gray-900"><%= schedule.course.name %></td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= schedule.week_day.titleize %></td>
              <td class="px-6 py-4 text-sm text-gray-900">
                <%= schedule.start_time.strftime("%H:%M") %> - <%= schedule.end_time.strftime("%H:%M") %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">
                <%= schedule.school_classes.map(&:name).join(", ") %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= schedule.course.room.name %></td>
              <td class="flex px-6 py-4 space-x-3 text-sm font-medium">
                <%= link_to "Edit", edit_users_dean_schedule_path(schedule), class: "text-indigo-600 hover:text-indigo-900" %>
                <%= button_to "Delete", users_dean_schedule_path(schedule), 
                    method: :delete, 
                    class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 inline",
                    data: { turbo_confirm: "Are you sure you want to delete this schedule?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>