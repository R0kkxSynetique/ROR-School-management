<div class="bg-gray-900 bg-opacity-50 shadow-xl backdrop-blur-sm border border-gray-800 px-6 py-8 sm:rounded-xl">
  <%= form_with(model: [:users, :dean, @period], local: true, class: "space-y-6") do |f| %>
    <% if @period.errors.any? %>
      <div class="rounded-lg bg-red-900 bg-opacity-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-300">
              <%= pluralize(@period.errors.count, "error") %> prohibited this period from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-200">
              <ul class="list-disc pl-5 space-y-1">
                <% @period.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="space-y-6">
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-300" %>
        <%= f.text_field :name, class: "mt-1 block w-full bg-gray-800 border-gray-700 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm text-gray-100" %>
      </div>

      <div>
        <%= f.label :start_time, class: "block text-sm font-medium text-gray-300" %>
        <%= f.time_field :start_time, class: "mt-1 block w-full bg-gray-800 border-gray-700 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm text-gray-100" %>
      </div>

      <div>
        <%= f.label :end_time, class: "block text-sm font-medium text-gray-300" %>
        <%= f.time_field :end_time, class: "mt-1 block w-full bg-gray-800 border-gray-700 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm text-gray-100" %>
      </div>

      <div class="flex items-center justify-end space-x-3">
        <%= link_to users_dean_periods_path,
            class: "inline-flex items-center px-4 py-2 border border-gray-600 rounded-lg shadow-sm text-sm font-medium text-gray-300 bg-gray-800 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-indigo-500 transition duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
          Cancel
        <% end %>

        <%= f.button class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-indigo-500 transition duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <%= @period.new_record? ? "Create Period" : "Update Period" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
