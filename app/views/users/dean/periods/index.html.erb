<% content_for :title, "Manage Periods" %>

<div class="container px-4 py-8 mx-auto">
  <div class="sm:flex sm:items-center sm:justify-between">
    <h1 class="text-2xl font-bold">Periods</h1>
    <div class="mt-4 sm:mt-0">
      <%= link_to "Add New Period", new_users_dean_period_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>

  <div class="mt-8 overflow-hidden bg-white shadow sm:rounded-lg">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Schedule</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Class</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Start Date</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">End Date</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% @periods.each do |period| %>
            <tr>
              <td class="px-6 py-4 text-sm text-gray-900">
                <%= "#{period.schedule.course.name} - #{period.schedule.week_day.titleize} #{period.schedule.start_time.strftime("%H:%M")}-#{period.schedule.end_time.strftime("%H:%M")}" %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= period.school_class.name %></td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= period.start_date.strftime("%Y-%m-%d") %></td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= period.end_date.strftime("%Y-%m-%d") %></td>
              <td class="flex px-6 py-4 space-x-3 text-sm font-medium">
                <%= link_to "Edit", edit_users_dean_period_path(period), class: "text-indigo-600 hover:text-indigo-900" %>
                <%= button_to "Delete", users_dean_period_path(period), 
                    method: :delete, 
                    class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 inline",
                    data: { turbo_confirm: "Are you sure you want to delete this period?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>