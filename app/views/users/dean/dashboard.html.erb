<% content_for :title, "Dean Dashboard" %>

<div class="container px-4 py-8 mx-auto">
  <h1 class="mb-6 text-2xl font-bold">Dean Dashboard</h1>

  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
    <!-- Create Class Card -->
    <div class="p-6 bg-white rounded-lg shadow">
      <h2 class="mb-4 text-lg font-semibold text-gray-600">Class Management</h2>
      <p class="mb-4 text-gray-600">Create new classes and manage existing ones</p>
      <%= link_to "Create New Class", users_dean_new_class_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>

    <!-- Schedule Management Card -->
    <div class="p-6 bg-white rounded-lg shadow">
      <h2 class="mb-4 text-lg font-semibold text-gray-600">Schedule Management</h2>
      <p class="mb-4 text-gray-600">Manage weekly time slots for courses</p>
      <%= link_to "Manage Schedules", users_dean_schedules_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>

    <!-- Period Management Card -->
    <div class="p-6 bg-white rounded-lg shadow">
      <h2 class="mb-4 text-lg font-semibold text-gray-600">Period Management</h2>
      <p class="mb-4 text-gray-600">Manage time periods like semesters or trimesters</p>
      <%= link_to "Manage Periods", users_dean_periods_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>

    <!-- Teacher Management Card -->
    <div class="p-6 bg-white rounded-lg shadow">
      <h2 class="mb-4 text-lg font-semibold text-gray-600">Teacher Management</h2>
      <p class="mb-4 text-gray-600">Manage teachers and their assignments</p>
      <%= link_to "Manage Teachers", users_dean_teachers_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>

    <!-- Specialization Management Card -->
    <div class="p-6 bg-white rounded-lg shadow">
      <h2 class="mb-4 text-lg font-semibold text-gray-600">Specialization Management</h2>
      <p class="mb-4 text-gray-600">Manage specializations and their assignments</p>
      <%= link_to "Manage Specializations", users_dean_specializations_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>

    <!-- Course Management Card -->
    <div class="p-6 bg-white rounded-lg shadow">
      <h2 class="mb-4 text-lg font-semibold text-gray-600">Course Management</h2>
      <p class="mb-4 text-gray-600">View and manage courses</p>
      <%= link_to "View Courses", courses_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>

    <!-- Student Management Card -->
    <div class="p-6 bg-white rounded-lg shadow">
      <h2 class="mb-4 text-lg font-semibold text-gray-600">Student Management</h2>
      <p class="mb-4 text-gray-600">Manage students and their enrollments</p>
      <%= link_to "Manage Students", users_dean_students_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>

    <!-- Section Management Card -->
    <div class="p-6 bg-white rounded-lg shadow">
      <h2 class="mb-4 text-lg font-semibold text-gray-600">Section Management</h2>
      <p class="mb-4 text-gray-600">Manage sections</p>
      <%= link_to "Manage Sections", users_dean_sections_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>

    <!-- Promotion Assessments Card -->
    <%= link_to promotion_asserments_path, class: "relative block rounded-lg border border-gray-300 bg-white p-6 shadow-sm hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
      <div>
        <span class="inline-flex rounded-lg bg-indigo-50 p-3">
          <svg class="h-6 w-6 text-indigo-700" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
          </svg>
        </span>
      </div>
      <div class="mt-4">
        <h3 class="text-lg font-medium text-gray-900">Promotion Assessments</h3>
        <p class="mt-2 text-sm text-gray-500">Manage promotion conditions and requirements for sections</p>
      </div>
    <% end %>
  </div>

  <!-- Recent Actions Section -->
  <div class="mt-8">
    <h2 class="mb-4 text-xl font-semibold">Recent Classes</h2>
    <div class="overflow-hidden bg-white shadow sm:rounded-lg">
      <ul class="divide-y divide-gray-200">
        <% SchoolClass.order(created_at: :desc).limit(5).each do |school_class| %>
          <li class="flex items-center justify-between px-6 py-4">
            <div>
              <h3 class="text-sm font-medium text-gray-900"><%= school_class.name %></h3>
              <p class="text-sm text-gray-500">Section: <%= school_class.section.name %></p>
            </div>
            <%= link_to "Assign Students", users_dean_new_student_path(school_class),
                class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-full shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>