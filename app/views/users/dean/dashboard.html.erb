<% content_for :title, "Dean Dashboard" %>

<div class="container px-4 py-8 mx-auto">
  <h1 class="mb-8 text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500">
    Dean Dashboard
  </h1>

  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
    <!-- Create Class Card -->
    <div class="p-6 bg-gray-800 rounded-xl shadow-xl border border-gray-700 backdrop-blur-lg bg-opacity-50 transform hover:scale-105 transition duration-300">
      <div class="flex items-center justify-center w-12 h-12 mb-4 bg-indigo-600 rounded-full">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
      </div>
      <h2 class="mb-2 text-xl font-semibold text-white">Class Management</h2>
      <p class="mb-4 text-gray-400">Create new classes and manage existing ones</p>
      <%= link_to "Create New Class", users_dean_new_class_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200" %>
    </div>

    <!-- Schedule Management Card -->
    <div class="p-6 bg-gray-800 rounded-xl shadow-xl border border-gray-700 backdrop-blur-lg bg-opacity-50 transform hover:scale-105 transition duration-300">
      <div class="flex items-center justify-center w-12 h-12 mb-4 bg-purple-600 rounded-full">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </div>
      <h2 class="mb-2 text-xl font-semibold text-white">Schedule Management</h2>
      <p class="mb-4 text-gray-400">Manage weekly time slots for courses</p>
      <%= link_to "Manage Schedules", users_dean_schedules_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition duration-200" %>
    </div>

    <!-- Period Management Card -->
    <div class="p-6 bg-gray-800 rounded-xl shadow-xl border border-gray-700 backdrop-blur-lg bg-opacity-50 transform hover:scale-105 transition duration-300">
      <div class="flex items-center justify-center w-12 h-12 mb-4 bg-pink-600 rounded-full">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <h2 class="mb-2 text-xl font-semibold text-white">Period Management</h2>
      <p class="mb-4 text-gray-400">Manage time periods like semesters or trimesters</p>
      <%= link_to "Manage Periods", users_dean_periods_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 transition duration-200" %>
    </div>

    <!-- Teacher Management Card -->
    <div class="p-6 bg-gray-800 rounded-xl shadow-xl border border-gray-700 backdrop-blur-lg bg-opacity-50 transform hover:scale-105 transition duration-300">
      <div class="flex items-center justify-center w-12 h-12 mb-4 bg-blue-600 rounded-full">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
      </div>
      <h2 class="mb-2 text-xl font-semibold text-white">Teacher Management</h2>
      <p class="mb-4 text-gray-400">Manage teachers and their assignments</p>
      <%= link_to "Manage Teachers", users_dean_teachers_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
    </div>

    <!-- Specialization Management Card -->
    <div class="p-6 bg-gray-800 rounded-xl shadow-xl border border-gray-700 backdrop-blur-lg bg-opacity-50 transform hover:scale-105 transition duration-300">
      <div class="flex items-center justify-center w-12 h-12 mb-4 bg-green-600 rounded-full">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
        </svg>
      </div>
      <h2 class="mb-2 text-xl font-semibold text-white">Specialization Management</h2>
      <p class="mb-4 text-gray-400">Manage specializations and their assignments</p>
      <%= link_to "Manage Specializations", users_dean_specializations_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-200" %>
    </div>

    <!-- Course Management Card -->
    <div class="p-6 bg-gray-800 rounded-xl shadow-xl border border-gray-700 backdrop-blur-lg bg-opacity-50 transform hover:scale-105 transition duration-300">
      <div class="flex items-center justify-center w-12 h-12 mb-4 bg-yellow-600 rounded-full">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
      </div>
      <h2 class="mb-2 text-xl font-semibold text-white">Course Management</h2>
      <p class="mb-4 text-gray-400">View and manage courses</p>
      <%= link_to "View Courses", courses_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 transition duration-200" %>
    </div>

    <!-- Student Management Card -->
    <div class="p-6 bg-gray-800 rounded-xl shadow-xl border border-gray-700 backdrop-blur-lg bg-opacity-50 transform hover:scale-105 transition duration-300">
      <div class="flex items-center justify-center w-12 h-12 mb-4 bg-red-600 rounded-full">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
      <h2 class="mb-2 text-xl font-semibold text-white">Student Management</h2>
      <p class="mb-4 text-gray-400">Manage students and their enrollments</p>
      <%= link_to "Manage Students", users_dean_students_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-200" %>
    </div>

    <!-- Section Management Card -->
    <div class="p-6 bg-gray-800 rounded-xl shadow-xl border border-gray-700 backdrop-blur-lg bg-opacity-50 transform hover:scale-105 transition duration-300">
      <div class="flex items-center justify-center w-12 h-12 mb-4 bg-cyan-600 rounded-full">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
        </svg>
      </div>
      <h2 class="mb-2 text-xl font-semibold text-white">Section Management</h2>
      <p class="mb-4 text-gray-400">Manage sections</p>
      <%= link_to "Manage Sections", users_dean_sections_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-cyan-600 hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500 transition duration-200" %>
    </div>

    <!-- Promotion Assessments Card -->
    <div class="p-6 bg-gray-800 rounded-xl shadow-xl border border-gray-700 backdrop-blur-lg bg-opacity-50 transform hover:scale-105 transition duration-300">
      <div class="flex items-center justify-center w-12 h-12 mb-4 bg-orange-600 rounded-full">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
        </svg>
      </div>
      <h2 class="mb-2 text-xl font-semibold text-white">Promotion Assessment</h2>
      <p class="mb-4 text-gray-400">Manage promotion conditions and requirements for sections</p>
      <%= link_to "Manage Promotion Assessments", promotion_asserments_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition duration-200" %>
    </div>
  </div>
</div>
