<% content_for :title, "Edit #{@school_class.name}" %>

<div class="container px-4 py-8 mx-auto">
  <div class="max-w-2xl mx-auto">
    <h1 class="mb-6 text-2xl font-bold">Edit Class</h1>

    <div class="px-4 py-5 bg-white shadow sm:rounded-lg sm:p-6">
      <%= form_with(model: @school_class, url: users_dean_update_class_path(@school_class), method: :patch, class: "space-y-6") do |f| %>
        <% if @school_class&.errors&.any? %>
          <div class="p-4 mb-6 rounded bg-red-50">
            <h2 class="text-sm font-medium text-red-700"><%= pluralize(@school_class.errors.count, "error") %> prohibited this class from being saved:</h2>
            <ul class="mt-3 text-sm text-red-600 list-disc list-inside">
              <% @school_class.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="grid grid-cols-1 gap-6">
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
          </div>

          <div>
            <%= f.label :uid, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :uid, class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
          </div>

          <div>
            <%= f.label :section_id, "Section", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.collection_select :section_id, Section.all, :id, :name, 
                {}, 
                class: "text-gray-900 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-400" %>
          </div>
        </div>

        <div class="pt-5">
          <div class="flex justify-end space-x-3">
            <%= link_to "Cancel", users_dean_school_classes_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= f.submit "Update Class", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>