<%= form_with(model: promotion_asserment, class: "space-y-8 divide-y divide-gray-200") do |form| %>
  <div class="space-y-8 divide-y divide-gray-200">
    <div>
      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :effective_date, class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :effective_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="sm:col-span-4">
          <%= form.label :section_ids, "Sections", class: "block text-sm font-medium text-gray-700" %>
          <%= form.collection_select :section_ids, Section.all, :id, :name, 
              { prompt: "Select sections" }, 
              { multiple: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
        </div>

        <div class="sm:col-span-3">
          <div class="flex items-start">
            <div class="flex h-5 items-center">
              <%= form.check_box :active, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
            </div>
            <div class="ml-3 text-sm">
              <%= form.label :active, class: "font-medium text-gray-700" %>
              <p class="text-gray-500">Enable or disable this promotion assessment</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="pt-8">
      <div>
        <h3 class="text-lg font-medium leading-6 text-gray-900">Promotion Conditions</h3>
        <p class="mt-1 text-sm text-gray-500">Define the conditions that students must meet for promotion.</p>
      </div>

      <div class="mt-6">
        <%= form.fields_for :promotion_conditions do |condition_form| %>
          <div class="promotion-condition-fields mb-6 p-4 border rounded-lg bg-gray-50">
            <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
              <div class="sm:col-span-3">
                <%= condition_form.label :condition_type, class: "block text-sm font-medium text-gray-700" %>
                <%= condition_form.select :condition_type, 
                    options_for_select([
                      ['Single Course', 'single_course'],
                      ['Multiple Courses', 'multiple_courses'],
                      ['Overall Average', 'overall_average']
                    ]), 
                    {}, 
                    { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
              </div>

              <div class="sm:col-span-3">
                <%= condition_form.label :minimum_grade, class: "block text-sm font-medium text-gray-700" %>
                <%= condition_form.number_field :minimum_grade, step: '0.1', min: 1, max: 6, 
                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>

              <div class="sm:col-span-3">
                <%= condition_form.label :weight, class: "block text-sm font-medium text-gray-700" %>
                <%= condition_form.number_field :weight, step: '0.01', min: 0, 
                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>

              <div class="sm:col-span-3">
                <div class="flex items-start">
                  <div class="flex h-5 items-center">
                    <%= condition_form.check_box :required, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
                  </div>
                  <div class="ml-3 text-sm">
                    <%= condition_form.label :required, class: "font-medium text-gray-700" %>
                    <p class="text-gray-500">Must this condition be met for promotion?</p>
                  </div>
                </div>
              </div>

              <div class="sm:col-span-6 course-selection" data-condition-type="<%= condition_form.object.condition_type %>">
                <%= condition_form.label :course_ids, "Related Courses", class: "block text-sm font-medium text-gray-700" %>
                <%= condition_form.collection_select :course_ids, Course.all, :id, :name, 
                    { prompt: "Select courses" }, 
                    { multiple: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
              </div>

              <% if condition_form.object.persisted? %>
                <div class="sm:col-span-6">
                  <%= condition_form.check_box :_destroy %>
                  <%= condition_form.label :_destroy, "Remove this condition", class: "ml-2 text-sm text-red-600" %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <div class="mt-4">
          <%= link_to_add_association 'Add Condition', form, :promotion_conditions, 
              class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
              data: { association_insertion_method: 'append', association_insertion_node: '#promotion-conditions' } %>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to "Cancel", promotion_asserments_path, class: "rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <%= form.submit class: "ml-3 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  </div>
<% end %>