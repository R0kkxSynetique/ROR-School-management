<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900"><%= @promotion_asserment.name %></h1>
      <p class="mt-2 text-sm text-gray-700"><%= @promotion_asserment.description %></p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none space-x-3">
      <%= link_to 'Edit', edit_promotion_asserment_path(@promotion_asserment), class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <%= link_to 'Back', promotion_asserments_path, class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  </div>

  <div class="mt-8 bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <h3 class="text-lg font-medium leading-6 text-gray-900">Details</h3>
          <dl class="mt-4 space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1">
                <span class="inline-flex rounded-full px-2 text-xs font-semibold leading-5 <%= @promotion_asserment.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= @promotion_asserment.active? ? 'Active' : 'Inactive' %>
                </span>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Effective Date</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @promotion_asserment.effective_date %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Sections</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @promotion_asserment.sections.map(&:name).join(", ") %>
              </dd>
            </div>
          </dl>
        </div>

        <div>
          <h3 class="text-lg font-medium leading-6 text-gray-900">Dean</h3>
          <dl class="mt-4 space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Name</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @promotion_asserment.dean.firstname %> <%= @promotion_asserment.dean.lastname %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <div class="mt-8">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Promotion Conditions</h3>
        <div class="mt-4 space-y-4">
          <% @promotion_asserment.promotion_conditions.each do |condition| %>
            <div class="rounded-md bg-gray-50 p-4">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <h4 class="text-sm font-medium text-gray-900">
                    <%= condition.condition_type.titleize %> 
                    <% if condition.required? %>
                      <span class="ml-2 inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">Required</span>
                    <% end %>
                  </h4>
                  <div class="mt-2">
                    <p class="text-sm text-gray-500">
                      Minimum Grade: <%= condition.minimum_grade %> |
                      Weight: <%= condition.weight %>
                    </p>
                    <% if condition.courses.any? %>
                      <p class="mt-1 text-sm text-gray-500">
                        Courses: <%= condition.courses.map(&:name).join(", ") %>
                      </p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>