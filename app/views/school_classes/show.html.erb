<% content_for :title, @school_class.name %>

<div class="container px-4 py-8 mx-auto">
  <div class="mb-8 overflow-hidden bg-white shadow sm:rounded-lg">
    <div class="flex items-center justify-between px-4 py-5 sm:px-6">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @school_class.name %></h1>
        <p class="max-w-2xl mt-1 text-sm text-gray-500">Class Details</p>
      </div>
      <% if current_user.person.is_a?(Dean) %>
        <div class="flex items-center space-x-4">
          <% unless @school_class.archived? %>
            <%= link_to "Edit Class", users_dean_edit_class_path(@school_class), 
                class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= button_to "Archive Class", users_dean_archive_class_path(@school_class), 
                method: :patch,
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                data: { confirm: "Are you sure you want to archive this class?" } %>
          <% else %>
            <%= button_to "Unarchive Class", users_dean_unarchive_class_path(@school_class), 
                method: :patch,
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500",
                data: { confirm: "Are you sure you want to unarchive this class?" } %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="px-4 py-5 bg-gray-50 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">UID</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @school_class.uid %></dd>
        </div>
        <div class="px-4 py-5 bg-white sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Section</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @school_class.section.name %></dd>
        </div>
        <% if @school_class.archived? %>
          <div class="px-4 py-5 bg-gray-50 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Status</dt>
            <dd class="mt-1 text-sm text-red-600 sm:mt-0 sm:col-span-2">
              Archived on <%= @school_class.archived_at.strftime("%B %d, %Y at %H:%M") %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <!-- Courses -->
  <div class="mb-8 overflow-hidden bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg font-medium leading-6 text-gray-900">Courses</h3>
    </div>
    <div class="border-t border-gray-200">
      <ul class="divide-y divide-gray-200">
        <% @courses.each do |course| %>
          <li class="px-4 py-3">
            <div class="text-sm text-gray-900"><%= course.name %></div>
            <div class="text-sm text-gray-500">Room: <%= course.room.name %></div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- Students -->
  <div class="overflow-hidden bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg font-medium leading-6 text-gray-900">Students</h3>
      <% if current_user.person.is_a?(Dean) && !@school_class.archived? %>
        <div class="mt-3">
          <%= link_to "Assign Student", users_dean_new_student_path(@school_class), 
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
    <div class="border-t border-gray-200">
      <ul class="divide-y divide-gray-200">
        <% @students.each do |student| %>
          <li class="flex items-center justify-between px-4 py-3">
            <div>
              <div class="text-sm text-gray-900"><%= "#{student.firstname} #{student.lastname}" %></div>
              <div class="text-sm text-gray-500"><%= student.username %></div>
            </div>
            <% if current_user.person.is_a?(Dean) && !@school_class.archived? %>
              <%= button_to users_dean_remove_student_path(@school_class, student), 
                  method: :delete,
                  class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0",
                  data: { confirm: "Are you sure you want to remove #{student.firstname} #{student.lastname} from this class?" } do %>
                Remove
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>