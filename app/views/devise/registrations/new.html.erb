<div class="flex flex-col items-center justify-center w-full max-w-md mx-auto">
  <h2 class="mb-8 text-3xl font-bold text-center">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-full space-y-6 bg-gray-800 p-8 rounded-lg shadow-xl" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2">
      <%= f.label :username, "Username (if you already have a profile)", class: "block text-sm font-medium text-gray-300" %>
      <%= f.text_field :username, autocomplete: "username",
          class: "w-full p-2 mt-1 text-gray-900 bg-white border border-gray-600 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="space-y-2">
      <%= f.label :email, class: "block text-sm font-medium text-gray-300" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "w-full p-2 mt-1 text-gray-900 bg-white border border-gray-600 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password, class: "block text-sm font-medium text-gray-300" %>
      <% if @minimum_password_length %>
        <span class="text-xs text-gray-400">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",
          class: "w-full p-2 mt-1 text-gray-900 bg-white border border-gray-600 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-300" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "w-full p-2 mt-1 text-gray-900 bg-white border border-gray-600 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= f.submit "Sign up", class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200" %>
    </div>
  <% end %>

  <div class="mt-6 text-center space-y-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
