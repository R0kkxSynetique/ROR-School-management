<% content_for :title, "Courses" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Course Management</h1>
    <% if current_user.person.is_a?(Dean) %>
      <%= link_to "New Course", users_dean_new_course_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <% end %>
  </div>

  <!-- Active Courses -->
  <div class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Active Courses</h2>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Room</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @active_courses.each do |course| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= course.name %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">
                <%= course.description %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= course.room.name %>
              </td>
              <td class="px-6 py-4 flex items-center space-x-3">
                <%= link_to 'View', course_path(course), class: "text-indigo-600 hover:text-indigo-900" %>
                <% if current_user.person.is_a?(Dean) %>
                  <%= link_to 'Edit', users_dean_edit_course_path(course), class: "text-blue-600 hover:text-blue-900" %>
                  <%= button_to 'Archive', users_dean_archive_course_path(course), method: :patch, 
                      class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0",
                      data: { confirm: "Are you sure you want to archive this course?" } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Archived Courses -->
  <div>
    <h2 class="text-xl font-semibold mb-4">Archived Courses</h2>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Room</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @archived_courses.each do |course| %>
            <tr class="bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= course.name %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500">
                <%= course.description %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= course.room.name %>
              </td>
              <td class="px-6 py-4 flex items-center space-x-3">
                <%= link_to 'View', course_path(course), class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>