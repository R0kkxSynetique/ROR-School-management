<% content_for :title, "Courses" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-white bg-gradient-to-r from-indigo-500 to-purple-500 bg-clip-text text-transparent">Course Management</h1>
    <% if current_user.person.is_a?(Dean) %>
      <%= link_to "New Course", users_dean_new_course_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200 transform hover:scale-105" %>
    <% end %>
  </div>

  <!-- Active Courses -->
  <div class="mb-12">
    <h2 class="text-xl font-semibold mb-6 text-gray-100 flex items-center">
      <span class="h-2 w-2 bg-green-400 rounded-full mr-2"></span>
      Active Courses
    </h2>
    <div class="bg-gray-800 shadow-xl rounded-xl overflow-hidden border border-gray-700">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-700">
          <thead class="bg-gray-900 bg-opacity-40">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Name</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Description</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Room</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-700">
            <% @active_courses.each do |course| %>
              <tr class="hover:bg-gray-700 transition duration-150">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-100">
                  <%= course.name %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-300">
                  <%= course.description %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-100">
                  <%= course.room.name %>
                </td>
                <td class="px-6 py-4">
                  <div class="flex items-center space-x-4">
                    <%= link_to course_path(course),
                        class: "text-indigo-400 hover:text-indigo-300 transition duration-150" do %>
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        View
                      </span>
                    <% end %>

                    <% if current_user.person.is_a?(Dean) %>
                      <%= link_to users_dean_edit_course_path(course),
                          class: "text-blue-400 hover:text-blue-300 transition duration-150" do %>
                        <span class="flex items-center">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                          </svg>
                          Edit
                        </span>
                      <% end %>

                      <%= button_to users_dean_archive_course_path(course), method: :patch,
                          class: "text-red-400 hover:text-red-300 transition duration-150 bg-transparent border-0 p-0 flex items-center",
                          data: { confirm: "Are you sure you want to archive this course?" } do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                        </svg>
                        Archive
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Archived Courses -->
  <div>
    <h2 class="text-xl font-semibold mb-6 text-gray-100 flex items-center">
      <span class="h-2 w-2 bg-gray-400 rounded-full mr-2"></span>
      Archived Courses
    </h2>
    <div class="bg-gray-800 shadow-xl rounded-xl overflow-hidden border border-gray-700">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-700">
          <thead class="bg-gray-900 bg-opacity-40">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Name</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Description</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Room</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-700">
            <% @archived_courses.each do |course| %>
              <tr class="bg-gray-800 hover:bg-gray-700 transition duration-150">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                  <%= course.name %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-400">
                  <%= course.description %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                  <%= course.room.name %>
                </td>
                <td class="px-6 py-4">
                  <div class="flex items-center space-x-4">
                    <%= link_to course_path(course),
                        class: "text-indigo-400 hover:text-indigo-300 transition duration-150" do %>
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        View
                      </span>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
