<% content_for :title, "Courses" %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Course Management</h1>

  <!-- Active Courses -->
  <div class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Active Courses</h2>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Room</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @active_courses.each do |course| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= course.name %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">
                <%= course.description %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= course.room.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to 'View', course_path(course), class: "text-indigo-600 hover:text-indigo-900" %>
                <% if current_user.person.is_a?(Dean) %>
                  <%= button_to 'Archive', users_dean_archive_course_path(course), 
                      method: :post,
                      class: "inline-block ml-3 text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer",
                      data: { turbo_confirm: 'Are you sure you want to archive this course?' } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Archived Courses -->
  <div>
    <h2 class="text-xl font-semibold mb-4">Archived Courses</h2>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Room</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @archived_courses.each do |course| %>
            <tr class="bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= course.name %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500">
                <%= course.description %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= course.room.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to 'View', course_path(course), class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>