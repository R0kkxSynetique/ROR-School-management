<% content_for :title, @course.name %>

<div class="container mx-auto px-4 py-8">
  <!-- Course Details -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:px-6 flex items-center justify-between">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Course Details</h3>
      </div>
      <% if current_user.person.is_a?(Dean) %>
        <div class="flex items-center space-x-4">
          <%= link_to "Edit Course", users_dean_edit_course_path(@course), 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <% if @course.status == "active" %>
            <%= button_to "Archive Course", users_dean_archive_course_path(@course), 
                method: :patch,
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                data: { confirm: "Are you sure you want to archive this course?" } %>
          <% else %>
            <%= button_to "Unarchive Course", users_dean_unarchive_course_path(@course), 
                method: :patch,
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500",
                data: { confirm: "Are you sure you want to unarchive this course?" } %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @course.name %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @course.description %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Room</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @course.room.name %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm sm:mt-0 sm:col-span-2">
            <span class="<%= @course.status == 'active' ? 'text-green-600' : 'text-red-600' %>">
              <%= @course.status.capitalize %>
            </span>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Specializations -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Specializations</h3>
    </div>
    <div class="border-t border-gray-200">
      <% if @course.specializations.any? %>
        <ul class="divide-y divide-gray-200">
          <% @course.specializations.each do |specialization| %>
            <li class="px-4 py-3">
              <div class="text-sm text-gray-900"><%= specialization.name %></div>
              <div class="text-sm text-gray-500"><%= specialization.description %></div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="px-4 py-3 text-sm text-gray-500">No specializations assigned to this course.</p>
      <% end %>
    </div>
  </div>

  <!-- Teachers -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Teachers</h3>
    </div>
    <div class="border-t border-gray-200">
      <ul class="divide-y divide-gray-200">
        <% @teachers.each do |teacher| %>
          <li class="px-4 py-3">
            <div class="text-sm text-gray-900"><%= "#{teacher.firstname} #{teacher.lastname}" %></div>
            <div class="text-sm text-gray-500"><%= teacher.username %></div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- Classes -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Classes Taking This Course</h3>
    </div>
    <div class="border-t border-gray-200">
      <ul class="divide-y divide-gray-200">
        <% @school_classes.each do |school_class| %>
          <li class="px-4 py-3">
            <div class="text-sm text-gray-900"><%= school_class.name %></div>
            <div class="text-sm text-gray-500">Section: <%= school_class.section.name %></div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to 'Back to Courses', courses_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>
</div>